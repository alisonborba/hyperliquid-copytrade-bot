# Hyperliquid Configuration
HYPERLIQUID_CHAIN=Mainnet
HYPERLIQUID_PRIVATE_KEY=your_private_key_here
HYPERLIQUID_VAULT_ADDRESS=your_vault_address_here

# Node Configuration
NODE_INFO_URL=http://localhost:3001/info
NODE_DATA_PATH=~/hl/data
FALLBACK_TO_PUBLIC_API=true

# Database Configuration
DATABASE_URL=sqlite:///copytrade.db
REDIS_URL=redis://localhost:6379/0

# Risk Management
MAX_DAILY_LOSS=0.05
MAX_POSITION_SIZE=0.1
MAX_TOTAL_EXPOSURE=0.5
DEFAULT_SLIPPAGE_BPS=50
FOLLOW_WINDOW_SECONDS=5

# Leader Selection
LEADER_UPDATE_INTERVAL=300
MIN_LEADER_EQUITY=10000
MAX_LEADERS_TO_FOLLOW=10
PERFORMANCE_LOOKBACK_DAYS=30

# Execution Settings
DRY_RUN=false
MAX_RETRIES=3
RETRY_DELAY_SECONDS=1.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
METRICS_PORT=8000
HEALTH_CHECK_PORT=8001

# Advanced Settings
ENABLE_WEBSOCKET=true
WEBSOCKET_TIMEOUT=30
BATCH_SIZE=100

# Leader Filtering (comma-separated)
BANNED_LEADERS=
ALLOWED_LEADERS=
LEADER_WEIGHTS=
